{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "infra/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "infra/email/templates/**/*",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true
  }
}